{
  "extends": ["plugin:node/recommended", "airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["node"],
  "env": {
    "mocha": true
  },
  "globals": {
    "artifacts": false,
    "contract": false
  },
  "rules": {
    "no-await-in-loop": "off",
    "consistent-return": "off",
    "no-console": "off",
    "no-plusplus": "off",
    "no-use-before-define": ["error", { "functions": false }],
    "node/no-unpublished-require": "off"
  }
}
